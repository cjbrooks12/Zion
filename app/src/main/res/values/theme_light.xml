<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ThemeBase.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="color_background">@color/background_light</item>
        <item name="color_card">@color/card_light</item>
        <item name="color_card_header">@color/card_header_light</item>

        <item name="theme_name">Light</item>
        <item name="toolbar_theme">@style/ThemeBase.Light.AppBarOverlay</item>
        <item name="popup_theme">@style/ThemeBase.Light.PopupOverlay</item>
        <item name="popupMenuStyle">@style/ThemeBase.Light.PopupMenuOverlay</item>

        <item name="android:textColorPrimary">@color/text_color_primary_light</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_light</item>
        <item name="icon_color">@color/text_color_secondary_light</item>

        <item name="preferenceTheme">@style/ThemeBase.Light.PreferenceThemeOverlay</item>
    </style>

    <style name="ThemeBase.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeBase.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="ThemeBase.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="ThemeBase.Light.PopupMenuOverlay" parent="Widget.AppCompat.Light.PopupMenu.Overflow"></style>

    <style name="ThemeBase.Light.PreferenceThemeOverlay" parent="PreferenceThemeOverlay.v14.Material"></style>
</resources>